{
  "collectCoverage": true,
  "collectCoverageFrom": [
    "./src/**/*.{ts,jxs,tsx,js}",
    "!src/**/*.spec.tsx",
    "!src/**/*.spec.ts",
    "!src/**/*.Spec.tsx",
    "!src/**/*.Spec.ts"
  ],
  "coverageThreshold": {
    "global": {
      "lines": 2
    },
    "./src/components/**/utils/**.ts": {
      "lines": 100
    },
    "./src/utils/": {
      "lines": 27,
      "branches": 37,
      "functions": 36
    },
    "./src/network/": {
      "lines": 31,
      "branches": 22,
      "functions": 27
    }
  },
  "moduleFileExtensions": [
    "ts",
    "js",
    "json",
    "node",
    "tsx",
    "jsx"
  ],
  "preset": "ts-jest",
  "transform": {
    "^.+\\.(ts|tsx)?$": [
      "ts-jest",
      {
        "diagnostics": {
          "ignoreCodes": [1343,2554]
        },
        "astTransformers": {
          "before": [
            {
              "path": "ts-jest-mock-import-meta",
              "options": { "metaObjectReplacement": { "env": {} } }
            }
          ]
        },
        "isolatedModules": true
      }

    ],
    "^.+\\.(js|jsx)$": "babel-jest"
  },
  "transformIgnorePatterns": [
    "/node_modules/(?!core)",
    "/node_modules/(?!remark-gfm)",
    "/node_modules/(?!@testing-library/jest-dom)"
  ],
  "modulePaths": [
    "<rootDir>"
  ],
  "moduleNameMapper": {
    "react-markdown": "<rootDir>/node_modules/react-markdown/react-markdown.min.js",
    "~/(.*)$": "<rootDir>/src/$1"
  },
  "moduleDirectories": [
    "node_modules",
    "<rootDir>"
  ],
  "globals": {
    "window": {
      "location": {
        "host": "localhost"
      }
    },
    "testEnvironment": "jsdom"
  },
  "testEnvironment": "jsdom",
  "automock": false,
  "resetMocks": false
}
